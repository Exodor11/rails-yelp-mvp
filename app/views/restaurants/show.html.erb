<h2><%= @restaurant.name %></h2>
<div><%= @restaurant.category %></div>
<div><%= @restaurant.address %></div>
<div><%= @restaurant.phone_number %></div>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= "#{review.content} | Rating: #{"*" * review.rating}" %></li>
  <% end %>
</ul>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>

<%= link_to "Edit #{@restaurant.name}", edit_restaurant_path(@restaurant) %>
<%= link_to "Delete #{@restaurant.name}", restaurant_path(id: @restaurant.id), method: :delete, data: { confirm: "Are you sure?" } %>

<%= link_to "Back to restaurants", restaurants_path %>